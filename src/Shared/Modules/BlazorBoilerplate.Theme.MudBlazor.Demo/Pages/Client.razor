<MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4" Style="margin-left: 10px;">Clients</MudText>
<MudTabs Elevation="25" Color="Color.Transparent" Rounded="true" PanelClass="mt-6">

<MudTabPanel Text="Client">
    <MudGrid>
        <MudItem xs="12" sm="4" md="3">
            <MudCard Elevation="25">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText>Client Profile</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <div class="d-flex justify-center mb-4">
                        <MudAvatar Image="@AvatarImageLink" Style="height:100px; width:100px;">
                            @if(AvatarImageLink == null)
                            {
                                <MudIcon Icon="@AvatarIcon" Size="Size.Large"></MudIcon>
                            }
                        </MudAvatar>

                        <MudAvatar Image="@AvatarImageLink" Style="height:100px; width:100px;background-color: #28a745;">
                            @* if(AvatarImageLink == null)
                                //{*@
                            <MudIcon Icon="@AvatarIcon" Style="font-size:5rem;"></MudIcon>
                        </MudAvatar>
                    </div>
                    <MudText Align="Align.Center">@PetName</MudText>
                    <MudText Align="Align.Center">@JobTitle</MudText>
                </MudCardContent>
                <MudCardActions Class="d-flex justify-center">
                    <MudButton OnClick="DeletePicture" Color="@AvatarButtonColor">@AvatarButtonText</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="8" md="9">
            <MudCard Elevation="25">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText>Profile Details</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudGrid>
                        <MudItem xs="6" md="4">
                            <MudTextField @bind-Value="@IsActive" Label="Is Active" Variant="Variant.Filled" Margin="Margin.Dense"/>
                        </MudItem>
                        <!-- Client Row 1 -->
                        <MudItem xs="1" md="3">
                            <MudTextField @bind-Value="@ReferredBy" Label="ReferredBy" Variant="Variant.Filled" Margin="Margin.Dense"/>
                        </MudItem>
                        <MudItem xs="1" md="1">
                            <MudTextField @bind-Value="@Salutation" Label="Salutation" Variant="Variant.Filled" Margin="Margin.Dense"/>
                        </MudItem>
                        <MudItem xs="5" md="5">
                            <MudTextField @bind-Value="@FirstName" Label="First Name" Variant="Variant.Filled" Margin="Margin.Dense"/>
                        </MudItem>
                        <MudItem xs="6" md="4">
                            <MudTextField @bind-Value="@LastName" Label="Last Name" Variant="Variant.Filled" Margin="Margin.Dense"/>
                        </MudItem>
                        <MudItem xs="6" md="4">
