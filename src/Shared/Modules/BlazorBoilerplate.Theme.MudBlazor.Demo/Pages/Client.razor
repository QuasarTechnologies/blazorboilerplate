                        </MudItem>
                        <MudItem xs="6" md="4">
                            <MudTextField @bind-Value="@SpouseDLNumber" Label="Spouse Driver Lic." Variant="Variant.Filled" Margin="Margin.Dense"/>
                        </MudItem>
                        <!-- Spouse Row 2 -->
                        <MudItem xs="6" md="4">
                            <MudTextField @bind-Value="@SpouseFirst" Label="Spouse First Name" Variant="Variant.Filled" Margin="Margin.Dense"/>
                        </MudItem>
                        <MudItem xs="6" md="4">
                            <MudTextField @bind-Value="@SpouseLast" Label="Spouse Last Name" Variant="Variant.Filled" Margin="Margin.Dense"/>
                        </MudItem>
                        <!-- Dates of Birth Row 2 -->
