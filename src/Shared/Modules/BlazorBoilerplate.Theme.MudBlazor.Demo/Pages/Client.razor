                        </MudItem>
                        <MudItem xs="12" md="4">
                            <MudTextField @bind-Value="@StreetAddress2" Label="Street Address 2" Variant="Variant.Filled" Margin="Margin.Dense"/>
                        </MudItem>
                        <!-- City, State, zip Row 4 -->
                        <MudItem xs="5" md="4">
                            <MudTextField @bind-Value="@City" Label="City" Variant="Variant.Filled" Margin="Margin.Dense"/>
                        </MudItem>
                        <MudItem xs="2" md="4">
